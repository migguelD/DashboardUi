<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_vertical_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/dimen_2"
        app:cardBackgroundColor="@color/light"
        app:cardCornerRadius="@dimen/dimen_4"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dimen_8"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_icono_item_vertical_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/unicons_line"
                android:gravity="center"
                android:text="@string/uil_anchor"
                android:textColor="@color/primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_titulo_item_vertical_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dimen_4"
                android:fontFamily="@font/poppins_semibold"
                android:text="Buttons"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/unicons_line"
                android:gravity="center"
                android:text="@string/uil_angle_right"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>