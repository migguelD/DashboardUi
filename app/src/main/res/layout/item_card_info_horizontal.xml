<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_horizontal"
        android:layout_width="@dimen/dimen_220"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dimen_4"
        app:cardMaxElevation="1dp"
        app:cardElevation="0.7dp"
        app:contentPadding="@dimen/dimen_16"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tituloCardHorizontal"
                android:text="Active Users" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_number_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/bodyCardHorizontal"
                    android:layout_weight="1"
                    android:text="498" />

                <TextView
                    android:id="@+id/tv_icono_body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/tvImgBodyCardHorizontal"
                    android:text="@string/uil_align_center_v" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_icono_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/tvImgFooterCardHorizontal"
                    android:text="@string/dripicons_arrow_up" />

                <TextView
                    android:id="@+id/tv_desc_icono_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/tvDescImgFooterCardHorizontal"
                    android:text="5.24%" />

                <TextView
                    android:id="@+id/tv_legend_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:text="Since last month" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>